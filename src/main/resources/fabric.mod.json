	"authors": [
		"CalinXD!"
	],
	"custom": {
		"cardinal-components": [
			"dominium:chunk_block_cache_component"
		]
	},
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
